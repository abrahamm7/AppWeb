@model List<AppWeb.Models.Categorie>
@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
</head>
<h2>Categorias</h2>

    <input type="text" id="lastnamebox" name="categorytext" class="form-control mb-4" placeholder="New category">
    <button class="btn btn-info btn-block my-4" value="addcategory" id="categorybtn" name="categorybutton">Add</button>

<div>
    @foreach (var item in Model)
     {
        if (item == null)
        {
            <table class="table">                
                <tbody>
                    <tr>
                        <td>No Elements</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <table class="table">              
                <tbody>
                    <tr>
                        <td>@item.categorie</td>
                    </tr>
                </tbody>
            </table>
        }

     }


</div>

