@model AppWeb.Models.User


<!DOCTYPE html>


<head>
    <title>Edit User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

</head>
@using (Html.BeginForm())
{
    <h2>Edit User</h2>
    <div class="row">
        <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
            <div class="card">
                <div class="card-body text-center">
                    <form class="text-center p-5">
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Code of user</h6>
                            </div>
                            @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", @id = "iduser", @readonly = "readonly" })
                        </div>
                        <br />
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Name</h6>
                            </div>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "username" })
                        </div>
                        <br />
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Username</h6>
                            </div>
                            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", @id = "nameuser" })
                        </div>
                        <br />
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Lastname</h6>
                            </div>
                            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @id = "lastuser" })
                        </div>
                        <br />
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Password</h6>
                            </div>
                            @Html.TextBoxFor(model => model.Clave, new { @class = "form-control", @id = "passuser" })
                        </div>
                        <br />
                        <div class="md-form mat-2">
                            <div class="text-left">
                                <h6>Role</h6>
                            </div>
                            @Html.TextBoxFor(model => model.Rol, new { @class = "form-control", @id = "rol", @readonly = "readonly" })
                        </div>
                        <br />
                        <div>
                            <div class="text-right">
                                <a class="btn btn-outline-primary" href="@Url.Action("Index", "ProfileUser")" style="width:150px">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-box-arrow-in-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M7.854 11.354a.5.5 0 0 0 0-.708L5.207 8l2.647-2.646a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708 0z" />
                                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0 0 1h9A.5.5 0 0 0 15 8z" />
                                        <path fill-rule="evenodd" d="M2.5 14.5A1.5 1.5 0 0 1 1 13V3a1.5 1.5 0 0 1 1.5-1.5h8A1.5 1.5 0 0 1 12 3v1.5a.5.5 0 0 1-1 0V3a.5.5 0 0 0-.5-.5h-8A.5.5 0 0 0 2 3v10a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-1.5a.5.5 0 0 1 1 0V13a1.5 1.5 0 0 1-1.5 1.5h-8z" />
                                    </svg>
                                    Back
                                </a>
                                <button class="btn btn-outline-success btn-group-lg my-4" style="width:150px" value="Edit" name="edituser">Edit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}
