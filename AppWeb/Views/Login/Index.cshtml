@model AppWeb.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
    <head>
        @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">*@
        <!-- CSS only -->
        <script type="text/javascript" src="../JsClientSide/Validations.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
    <body style="background-image: linear-gradient(45deg, #93a5cf 0%, #e4efe9 100%);">
        <div id="divloginform">
            @using (Ajax.BeginForm("LoginUser", "Login", new AjaxOptions()
            {
                HttpMethod = "POST"

            }))
            {
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
                            <br />
                            <br />
                            <br />
                            <div class="card" style="border-bottom-left-radius: 40px;
        border-top-left-radius: 40px;
        border-top-right-radius: 40px;
        border-bottom-right-radius: 40px;
        box-shadow: 5px 5px 15px 1px rgb(221, 216, 216);">
                                <div class="card-body">
                                    <div style="float:left; width:50%;">
                                        <img src="../Images/Ideas.jpg" width="400" height="500" style="box-shadow:5px 5px 15px 1px rgb(221, 216, 216);" />
                                    </div>
                                    <div class="text-right" style="width:50%; float:right;">
                                        <br />
                                        <br />
                                        <br />
                                        <br />
                                        <div class="text-center">
                                            <h4>Login</h4>
                                        </div>
                                        <form class="text-center p-5">
                                            <div class="md-form mat-2">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "User"})
                                            </div>

                                            <br />
                                            <div class="md-form mat-2">
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password"})
                                            </div>

                                            <br />


                                            <div class="card-foter text-center" style="padding:15px;">

                                                <a href="@Url.Action("Index", "UserRegister")" class="btn btn-outline-primary btn-group-lg my-4" style="width:150px; box-shadow:5px 5px 15px 1px rgb(221, 216, 216);">
                                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM6 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm4.5 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                                                        <path fill-rule="evenodd" d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z" />
                                                    </svg>
                                                    Sign Up
                                                </a>
                                                <button class="btn btn-outline-success btn-group-lg my-4" style="width:150px; box-shadow:5px 5px 20px 1px rgb(221, 216, 216);" id="signbtn">
                                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-box-arrow-in-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M8.146 11.354a.5.5 0 0 1 0-.708L10.793 8 8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0z" />
                                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 1 8z" />
                                                        <path fill-rule="evenodd" d="M13.5 14.5A1.5 1.5 0 0 0 15 13V3a1.5 1.5 0 0 0-1.5-1.5h-8A1.5 1.5 0 0 0 4 3v1.5a.5.5 0 0 0 1 0V3a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v10a.5.5 0 0 1-.5.5h-8A.5.5 0 0 1 5 13v-1.5a.5.5 0 0 0-1 0V13a1.5 1.5 0 0 0 1.5 1.5h8z" />
                                                    </svg>
                                                    Sign in
                                                </button>
                                            </div>
                                            <div class="md-form mat-2 text-center">
                                                <h5 class="text-danger">@ViewBag.Message</h5>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </body>