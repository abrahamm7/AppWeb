
@{
    ViewBag.Title = "Login";
    Layout = null;
}
    <head>
        @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">*@
        <!-- CSS only -->
        <script type="text/javascript" src="../JsClientSide/Validations.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>


<div class="container">
    <div class="jumbotron text-center">
        <h2 id="demo">Login</h2>
    </div>  
    <div class="row">
        <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
            <div class="card">
                <div class="card-body text-center">
                    <form class="text-center p-5">
                        <div class="md-form mat-2">
                            <input type="text" id="userbox" name="usertxt" class="form-control" placeholder="User">
                        </div>

                        <br />
                        <div class="md-form mat-2">
                            <input type="password" id="passbox" name="passtxt" class="form-control" placeholder="Password">
                        </div>

                        <br />
                        <div class="card-foter text-right">
                            <button onclick="RequestLogin()" class="btn btn-outline-success btn-group-lg my-4" style="width:150px" value="Login" id="signbtn" name="signuser">Sign in</button>
                        </div>

                        <br />

                        <p>
                            Not a member?
                            <a>
                                @Html.ActionLink("Sign Up", "Index", "UserRegister")
                            </a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>

