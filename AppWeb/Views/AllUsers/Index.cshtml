@model List<AppWeb.Models.User>
@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
</head>

<div>
    <table class="table table-bordered">
        <tr>
            <th>
                User
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.name
                    @item.lastname
                    @item.username
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", new { iduser = item.iduser })
                    @Html.ActionLink("Delete", "DeleteUser", new { iduser = item.iduser })
                    @Html.ActionLink("View", "ViewUser", new { iduser = item.iduser })
                </td>
            </tr>
        }
    </table>

    </div>


