@model AppWeb.Models.Product
@{
    ViewBag.Title = "Edit Product";
}

<h2>EditProduct</h2>

@using (Html.BeginForm())
{

    <fieldset>
        <div class="editor-field">

        @Html.LabelFor(model => model.ProductoId)
    </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductoId, new
       { disabled = "disabled", @readonly = "readonly" })
        </div>
        <div class="editor-field">

        @Html.LabelFor(model => model.CategoriaId)
    </div>
          <div class="editor-field">
            @Html.EditorFor(model => model.CategoriaId, new
       { disabled = "disabled", @readonly = "readonly" })
        </div>
        <div class="editor-field">
        @Html.LabelFor(model => model.Nombre)
    </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
        </div>
        <div class="editor-field">
        @Html.LabelFor(model => model.Precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Precio)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>

    </fieldset>

}

