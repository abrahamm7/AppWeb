@model List<AppWeb.Models.Product>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

</head>

<div class="text-right">
    <a class="btn btn-outline-success" href="@Url.Action("NewProduct","Product")" style="width:150px">Create new</a>
</div>
<br />

<div style="display:flex; justify-content:space-between; flex-direction:row; flex-wrap:wrap; justify-self:self-start;">
    @foreach (var item in Model)
    {
        <div class="card border-primary mb-3" style="width:350px;">
            <div class="card-header"><h5>@item.Nombre</h5></div>
            <div class="card-body">
                <p class="card-text">Category of this product</p>
                <p class="card-text">@item.Categoria</p>
            </div>
            <div class="card-footer">
                <p>Price: $@item.Precio</p>
                <div class="text-right">
                    @Html.ActionLink("Edit", "EditProduct", new { id = item.ProductoId }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ProductoId }, new { @class = "btn btn-outline-danger" })
                </div>
            </div>
        </div>
    }
</div>