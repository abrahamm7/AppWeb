@model List<AppWeb.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
</head>

<form class="text-center border border-light p-5">

    <p class="h4 mb-4">New Product</p>

    <input type="text" id="userbox" name="producttxt" class="form-control mb-4" placeholder="Product">

    <input type="text" id="userbox" name="producttxt" class="form-control mb-4" placeholder="Category">

    <button class="btn btn-primary btn-block" value="Add" id="addbtn" name="btncategory" type="submit">Add</button>
</form>
<div>
    @foreach (var item in Model)
    {
        if (item == null)
        {
            <table class="table">
                <tbody>
                    <tr>
                        <td>No Elements</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Category  
                        </td>
                    </tr>
                </tbody>
            </table>
        }

    }


</div>

