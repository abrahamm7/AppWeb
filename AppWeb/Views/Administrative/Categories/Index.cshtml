@model List<AppWeb.Models.Category>
@{
    ViewBag.Title = "Category";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

</head>
<h2>Categories</h2>

<div class="text-right">
    <a class="btn btn-outline-success" href="@Url.Action("Index", "CreateCategory")" style="width:150px">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z" />
            <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z" />
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
        </svg>
        Create new
    </a>
</div>
<br />

<div>
    <div class="card deck light mb-3" style="justify-content:space-between; flex-wrap:wrap; justify-self:self-start;">
        <div class="card">
            @foreach (var item in Model)
            {
                <div class="card-header">
                    <h6>@item.Categoria</h6>                   
                </div>
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <p class="card-title">@item.Descripcion</p>
                    <div class="text-right">
                        @Html.ActionLink("Edit", "EditCategory", new { model = item.CategoriaId }, new { @class = "btn btn-outline-primary" })
                        @Html.ActionLink("Delete", "DeleteCategory", new { model = item.Categoria }, new { @class = "btn btn-outline-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
