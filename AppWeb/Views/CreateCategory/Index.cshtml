
@{
    ViewBag.Title = "New category";
}
    <head>
        @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">*@
        <script type="text/javascript" src="../JsClientSide/Validations.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
<h2>Create new category</h2>

<div class="row">
    <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
        <div class="card">
            <div class="card-body text-center">
                <form class="text-center p-5">
                    <div class="md-form mat-2">
                        <input type="text" id="categorybox" name="categorytxt" class="form-control" placeholder="Category name">
                    </div>
                    <br />
                    <div class="md-form mat-2">
                        <input type="text" id="descbox" name="desctxt" class="form-control" placeholder="Description">
                    </div>
                    <div>
                        <div class="text-right">
                            <button onclick="RequestNewCategory()" class="btn btn-outline-success btn-group-lg my-4" style="width:150px" value="Create" name="createcategory">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
