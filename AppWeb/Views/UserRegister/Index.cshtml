
@{
    ViewBag.Title = "Sign Up";
    Layout = null;
}


<!-- Default form login -->
<head>
    @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">*@
    <script type="text/javascript" src="../JsClientSide/Validations.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<div class="container">
    <div class="jumbotron text-center">
        <h2>Sign Up</h2>
    </div>
    <div class="row">
        <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
            <div class="card">
                <div class="card-body text-center">
                    <form class="text-center p-5">
                        <div class="md-form mat-2">
                            <input type="text" id="nametxt" name="nametxt" class="form-control" placeholder="Name">
                        </div>

                        <br />
                        <div class="md-form mat-2">
                            <input type="text" id="lastnametxt" name="lasttxt" class="form-control" placeholder="Lastname">
                        </div>

                        <br />
                        <div class="md-form mat-2">
                            <input type="text" id="usertxt" name="usertxt" class="form-control" placeholder="Username">
                        </div>

                        <br />
                        <div class="md-form mat-2">
                            <input type="password" id="passtxt" name="passtxt" class="form-control" placeholder="Password">
                        </div>



                        <br />
                        <div>
                            <div class="text-right">
                                 <a href="@Url.Action("Index", "Login")" class="btn btn-outline-primary btn-group-lg my-4" style="width:150px" value="Login" id="signbtn" name="signuser">Back</a>
                                 <button onclick="RequestRegister()" class="btn btn-outline-success btn-group-lg my-4" style="width:150px" value="SignUp" id="signbtn" name="signuser">Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


