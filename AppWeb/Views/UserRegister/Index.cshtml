
@{
    ViewBag.Title = "Sign Up";
    Layout = null;
}

<head>
    @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">*@
    <script type="text/javascript" src="../JsClientSide/Validations.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body style="background-image: linear-gradient(-20deg, #ddd6f3 0%, #faaca8 100%, #faaca8 100%);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="text-align:center;min-width:50%;max-width:100%; position:center">
                <br />
                <br />
                <br />
                <div class="card" style="border-bottom-left-radius: 40px;
        border-top-left-radius: 40px;
        border-top-right-radius: 40px;
        border-bottom-right-radius: 40px;
        box-shadow: 5px 5px 15px 1px rgb(221, 216, 216);">
                    <div class="card-body text-center">
                        <div style="float:left; width:50%;">
                            <img src="../Images/Ideas.jpg" width="400" height="500" style="box-shadow:5px 5px 15px 1px rgb(221, 216, 216);" />
                        </div>
                        <div class="text-center" style="float:right; width:50%;">
                            <br />
                            <br />
                            <div class="text-center">
                                <h4>Sign Up</h4>
                            </div>

                            <form class="text-center p-5">
                                <div class="md-form mat-2">
                                    <input type="text" id="nametxt" name="nametxt" class="form-control" placeholder="Name">
                                </div>

                                <br />
                                <div class="md-form mat-2">
                                    <input type="text" id="lastnametxt" name="lasttxt" class="form-control" placeholder="Lastname">
                                </div>

                                <br />
                                <div class="md-form mat-2">
                                    <input type="text" id="usertxt" name="usertxt" class="form-control" placeholder="Username">
                                </div>

                                <br />
                                <div class="md-form mat-2">
                                    <input type="password" id="passtxt" name="passtxt" class="form-control" placeholder="Password">
                                </div>



                                <br />
                                <div>
                                    <div class="text-center">
                                        <a href="@Url.Action("Index", "Login")" class="btn btn-outline-primary btn-group-lg my-4" style="width:150px;box-shadow:5px 5px 15px 1px rgb(221, 216, 216);" value="Login" id="signbtn" name="signuser">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-box-arrow-in-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M7.854 11.354a.5.5 0 0 0 0-.708L5.207 8l2.647-2.646a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708 0z" />
                                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0 0 1h9A.5.5 0 0 0 15 8z" />
                                                <path fill-rule="evenodd" d="M2.5 14.5A1.5 1.5 0 0 1 1 13V3a1.5 1.5 0 0 1 1.5-1.5h8A1.5 1.5 0 0 1 12 3v1.5a.5.5 0 0 1-1 0V3a.5.5 0 0 0-.5-.5h-8A.5.5 0 0 0 2 3v10a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-1.5a.5.5 0 0 1 1 0V13a1.5 1.5 0 0 1-1.5 1.5h-8z" />
                                            </svg>
                                            Back
                                        </a>
                                        <button onclick="RequestRegister()" class="btn btn-outline-success btn-group-lg my-4" style="width:150px;box-shadow:5px 5px 15px 1px rgb(221, 216, 216);" value="SignUp" id="signbtn" name="signuser">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM6 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm4.5 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                                                <path fill-rule="evenodd" d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z" />
                                            </svg>
                                            Sign Up
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>
